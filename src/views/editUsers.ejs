<html lang="en">
<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Update</title>
      <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
      <div class="topnav">
            <a href="/">Home</a>
            <a href="/create">Create users</a>
      </div>
      <div class='form'>
            <form action="/create-user" method="POST">
                  <fieldset>
                        <legend>Form update users</legend>
                  
                        <div class="input-group">
                              <label for="">Email</label>
                              <input 
                              type="text" 
                              name="email"
                              value="<%= userEdit.email%>"
                              >
                        </div>
                        <div class="input-group">
                              <label for="">Name</label>
                              <input 
                              type="text" 
                              name="name"
                              value="<%= userEdit.name%>"
                              >
                        </div>
                        <div class="input-group">
                              <label for="">City</label>
                              <input 
                              type="text" 
                              name="city"
                              value="<%= userEdit.city%>"
                              >
                        </div>
                        <div>
                              <button class="submit-btn">
                                    Save
                              </button>
                        </div>
                  </fieldset>
            </form>
      </div>
</body>
</html>